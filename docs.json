{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "DeepL Documentation",
  "colors": {
    "primary": "#0f2b46",
    "light": "#ffffff",
    "dark": "#0f2b46"
  },
  "background": {
    "color": {
      "light": "#ffffff"
    }
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "fonts": {
    "heading": {
      "family": "Roboto Light",
      "source": "https://mintlify-assets.b-cdn.net/fonts/roboto-light.woff2",
      "format": "woff2"
    },
    "body": {
      "family": "Roboto Light",
      "source": "https://mintlify-assets.b-cdn.net/fonts/roboto-light.woff2",
      "format": "woff2"
    }
  },
  "favicon": "/_assets/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "docs/getting-started/intro",
              "docs/getting-started/about",
              "docs/getting-started/auth",
              "docs/getting-started/managing-api-keys"
            ]
          },
          {
            "group": "Learning & How Tos",
            "pages": [
              { 
                "group": "Cookbook",
                "pages": [
                  "docs/learning-how-tos/cookbook",
                  "docs/learning-how-tos/cookbook/google-sheets",
                  "docs/learning-how-tos/cookbook/context-parameter-examples"
                ]
              },
              {
                "group": "Guides",
                "pages": [
                  "docs/learning-how-tos/guides/",
                  "docs/learning-how-tos/guides/deepl-mcp-server",
                  "docs/learning-how-tos/guides/first-things-to-try-with-the-deepl-api",
                  "docs/learning-how-tos/guides/glossaries-in-the-real-world",
                  "docs/learning-how-tos/guides/placeholder-tags"
                ]
              }
            ]
          },
          {
            "group": "Best Practices",
            "pages": [
              "docs/best-practices/cors-requests",
              "docs/best-practices/cost-control",
              "docs/best-practices/error-handling",
              "docs/best-practices/language-detection",
              "docs/best-practices/working-with-context"
            ]
          },
          {
            "group": "XML and HTML handling",
            "pages": [
              "docs/xml-and-html-handling/customized-xml-outline-detection",
              "docs/xml-and-html-handling/html",
              "docs/xml-and-html-handling/structured-content",
              "docs/xml-and-html-handling/xml"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "docs/resources/release-notes",
              "docs/resources/breaking-changes-change-notices",
              "docs/resources/language-release-process",
              "docs/resources/usage-limits",
              {
                "group": "Breaking changes (Change Notices)",
                "pages": [
                  "docs/resources/breaking-changes-change-notices/july-2024-deprecation-of-insecure-cipher-suites",
                  "docs/resources/breaking-changes-change-notices/march-2025-deprecating-get-requests-to-translate-and-authenticating-with-auth-key"
                ]
              },
              "docs/resources/open-api-spec",
              "docs/resources/deepl-developer-community"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Reference",
            "pages": [
            {
              "group": "Translate text",
              "pages": [
                "api-reference/translate",
                "api-reference/translate/request-translation"
              ]
            },
            {
              "group": "Translate documents",
              "pages": [
                "api-reference/document",
                "api-reference/document/upload-and-translate-a-document",
                "api-reference/document/download-translated-document",
                "api-reference/document/check-document-status"
              ]
            },
            {
              "group": "Glossaries",
              "pages": [
                "api-reference/multilingual-glossaries/create-a-glossary",
                "api-reference/multilingual-glossaries/delete-a-glossary",
                "api-reference/multilingual-glossaries/deletes-the-dictionary-associated-with-the-given-language-pair-with-the-given-glossary-id",
                "api-reference/multilingual-glossaries/edit-glossary-details",
                "api-reference/multilingual-glossaries/list-all-glossaries",
                "api-reference/multilingual-glossaries/replaces-or-creates-a-dictionary-in-the-glossary-with-the-specified-entries",
                "api-reference/multilingual-glossaries/retrieve-glossary-details",
                "api-reference/multilingual-glossaries/retrieve-glossary-entries",
                {
                  "group": "Manage Monolingual Glossaries",
                  "pages": [
                    "api-reference/glossaries",
                    "api-reference/glossaries/create-a-glossary",
                    "api-reference/glossaries/delete-a-glossary",
                    "api-reference/glossaries/list-all-glossaries",
                    "api-reference/glossaries/list-language-pairs-supported-by-glossaries",
                    "api-reference/glossaries/retrieve-glossary-details",
                    "api-reference/glossaries/retrieve-glossary-entries"
                  ]
                }
              ]
            },
            {
              "group": "Rephrase text",
              "pages": [
                "api-reference/improve-text",
                "api-reference/improve-text/request-text-improvement"
              ]
            },
            {
              "group": "Retrieve usage & quota",
              "pages": [
                "api-reference/usage-and-quota",
                "api-reference/usage-and-quota/check-usage-and-limits"
              ]
            },
            {
              "group": "Retrieve languages",
              "pages": [
                "api-reference/languages",
                "api-reference/languages/retrieve-supported-languages"
              ]
            }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "DeepL Web Translator",
          "icon": "language",
          "href": "https://www.deepl.com/translator"
        },
        {
          "anchor": "Create Free API Account",
          "icon": "user",
          "href": "https://www.deepl.com/en/pro#developer"
        }
      ]
    }
  },
  "logo": {
    "light": "/_assets/logo/logo.svg",
    "dark": "/_assets/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Us",
        "href": "https://www.deepl.com/contact-us"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Start free trial",
      "href": "https://www.deepl.com/en/pro"
    }
  },
  "footer": {
    "socials": {
      "facebook": "https://www.facebook.com/DeepLcom/",
      "linkedin": "https://www.linkedin.com/company/linkedin-com-company-deepl/",
      "github": "https://github.com/DeepLcom",
      "instagram": "https://www.instagram.com/deeplhq/"
    }
  },
  "api": {
    "examples": {
      "languages": ["curl"]
    },
    "playground": {
      "proxy": false
    }
  },
  "errors": {
    "404": {
      "redirect": false
    }
  },
  "redirects": [
  {
    "source": "/docs/api-reference/:page*",
    "destination": "/api-reference/:page*"
  }
  ],
  "integrations": {
    "telemetry": {
      "enabled": false
    }
  }
}